@attribute [Authorize(Roles = "User")]
@attribute [Route(Routes.PotentialStories)]
@inherits StateComponent

<MudStack>
    <MudStack Row AlignItems="AlignItems.End" Class="d-flex align-center">
        <MudText Typo="Typo.h5">Potential Stories</MudText>
        <MudSpacer />
        <MudButton ButtonType="ButtonType.Submit"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   Variant="Variant.Filled"
                   Size="Size.Large"
                   Disabled="false"
                   IconSize="Size.Large"
                   OnClick="@OpenAddPotentialStoryModal">Add</MudButton>
    </MudStack>
    <MudTable Items="@PotentialStoryState.Entities"
              Hover
              Breakpoint="Breakpoint.Sm"
              Loading="@PotentialStoryState.IsLoading"
              data-testid="@DataTestIds.PotentialStoriesTable">
        <HeaderContent>
            <MudTh>Name</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Name">
                <MudLink Href="@RouteHelpers.PotentialStory(context.Id)" Typo="Typo.body1">@context.Name</MudLink>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudStack>