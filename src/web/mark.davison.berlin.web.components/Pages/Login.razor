@attribute [Route(Routes.Login)]

@inherits StateComponent

<h1>Login</h1>

@if (StartupState.Loading)
{
	<MudProgressCircular Size="Size.Large" Class="ma-auto" Indeterminate />
}
else if (StartupState.Loaded)
{
	<ul>
		@foreach (var provider in StartupState.Data.EnabledAuthProviders)
		{
			@*TODO: Icons/images etc*@
			<li><a href="@($"https://localhost:40000/account/login/{provider}")">Login with @provider</a></li> 
		}
	</ul>
}