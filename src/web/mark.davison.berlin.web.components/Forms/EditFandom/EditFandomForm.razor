@inherits Form<EditFandomFormViewModel>

<MudForm>
    <MudTextField 
        id="edit-fandom-form-name" 
        T="string" 
        Label="Name" @bind-Text="FormViewModel.Name" 
        For=@(() => FormViewModel.Name) 
        Immediate />
    <MudCheckBox 
        id="edit-fandom-for-hidden" 
        T="bool" 
        Label="Hidden" 
        LabelPosition="LabelPosition.End" 
        @bind-Value="FormViewModel.IsHidden" 
        For=@(() => FormViewModel.IsHidden) />
    <MudAutocomplete 
        T="Guid?"
        Label="Parent fandom"
        Placeholder="Enter text to search..."
        @bind-Value="FormViewModel.ParentFandomId"
        For=@(() => FormViewModel.ParentFandomId)
        SearchFunc="@FormViewModel.Search"
        ToStringFunc="@FormViewModel.FandomIdToString">
    </MudAutocomplete> @*TODO: Wrapper for this to take in IAutocompleteItem{Guid Id, string Display, string? Code} etc*@
</MudForm>